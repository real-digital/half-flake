{
    "name": "real-digital/half-flake",
    "description": "HalfFlake is a PHP library for distributive generating unique ID numbers using Twitter's Snowflake Algorithm",
    "keywords": [
        "Algorithm",
        "Generator",
        "ID",
        "Identity",
        "Snowflake"
    ],
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/real-digital/half-flake",
    "authors": [
        {
            "name": "Ilian Ranguelov"
        }
    ],
    "support": {
        "email": "opensource@real-digital.de",
        "issues": "https://github.com/real-digital/half-flake/issues",
        "source": "https://github.com/real-digital/half-flake"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require": {
        "php": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3 || ^8.0",
        "slevomat/coding-standard": "^4.8",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Real\\HalfFlake\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Real\\HalfFlake\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpcs -ps",
            "vendor/bin/phpunit"
        ]
    }
}
